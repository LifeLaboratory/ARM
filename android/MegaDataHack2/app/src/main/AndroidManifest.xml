            android:name=".Oper_spis"
            android:label="«Мои операторы»" />
        <activity
            android:name=".CompanyInterface"
            android:label="«Моя компания»"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Chat"
            android:label="Чат с абонентом"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChatArchive"
            android:label="Архивное сообщение"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChangeOper"
            android:label="Редактирование оператора"
